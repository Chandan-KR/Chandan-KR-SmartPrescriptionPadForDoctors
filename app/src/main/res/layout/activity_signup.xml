<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    tools:context=".signup">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/women1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20ssp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Create\nAccount"
        android:textColor="#ffffff"
        android:textSize="@dimen/_33ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Email"
            android:layout_marginStart="@dimen/_32sdp"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:textColor="#2F3363"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:padding="@dimen/_8sdp"
            android:textColor="#a2a4b5"
            android:ems="10"
            android:background="@drawable/edittext"
            android:inputType="textPersonName"
            android:scrollHorizontally="true"
            android:hint="Enter your email"
            android:singleLine="true"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="sans-serif-condensed-medium"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username "
            android:layout_marginStart="@dimen/_32sdp"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:textColor="#2F3363"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <EditText
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:padding="@dimen/_8sdp"
            android:textColor="#a2a4b5"
            android:ems="10"
            android:background="@drawable/edittext"
            android:inputType="textPersonName"
            android:hint="Enter your Name"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="sans-serif-condensed-medium"/>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginStart="@dimen/_32sdp"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:textColor="#2F3363"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <EditText
            android:id="@+id/editTextTextPersonName8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:padding="@dimen/_8sdp"
            android:textColor="#a2a4b5"
            android:ems="10"
            android:background="@drawable/edittext"
            android:inputType="textPassword"
            android:hint="Enter your password"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <Button
            android:id="@+id/signupcreatebtn"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:background="@drawable/background_btn2"
            android:drawableEnd="@drawable/circle"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="@dimen/_4sdp"
            android:paddingStart="@dimen/_20sdp"
            android:text="Signup"
            android:textColor="#ffffff"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/already_ac_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="sans-serif-condensed-medium"
            android:minHeight="48dp"
            android:onClick="already_ac_signin"
            android:text="Already have an account?sign in"
            android:textAlignment="center"
            android:textColor="#2f3363"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:srcCompat="@drawable/googleicon" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>