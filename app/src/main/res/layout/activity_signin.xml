<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    tools:context=".signin">
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="215dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/women2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Sign in"
        android:textColor="#ffffff"
        android:textSize="@dimen/_33ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.472" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Email"
            android:layout_marginStart="@dimen/_32sdp"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:textColor="#2F3363"
            android:layout_marginTop="@dimen/_32sdp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:padding="@dimen/_8sdp"
            android:textColor="#a2a4b5"
            android:ems="10"
            android:background="@drawable/edittext"
            android:inputType="textPersonName"
            android:hint="Enter your Email"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Password"
            android:textColor="#2F3363"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Enter your Password"
            android:inputType="textPersonName"
            android:padding="@dimen/_8sdp"
            android:textColor="#a2a4b5"
            android:textSize="@dimen/_16ssp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:padding="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="Sign in"
            android:fontFamily="sans-serif-condensed-medium"
            android:drawableEnd="@drawable/circle"
            android:background="@drawable/background_btn2"
            android:layout_marginEnd="@dimen/_32sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:paddingStart="@dimen/_20sdp"
            style="@android:style/Widget.Button"
            android:textColor="#ffffff"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Forgot password? reset now"
            android:textAlignment="center"
            android:textColor="#2f3363"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:srcCompat="@drawable/googleicon" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>